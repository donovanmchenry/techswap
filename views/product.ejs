<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle || 'TechSwap' %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>

    <main>
        <section class="product-detail">
            <div class="container">
                <div class="product-layout">
                    <div class="product-gallery">
                        <img src="<%= product.image_url %>" alt="<%= product.title %>" class="main-image" onerror="this.src='/images/placeholder.jpg'">
                    </div>

                    <div class="product-details">
                        <h1 class="product-title-large"><%= product.title %></h1>

                        <div class="product-meta">
                            <div class="product-rating">
                                <% if (reviewCount > 0) { %>
                                    <span class="stars">
                                        <% for (let i = 0; i < 5; i++) { %>
                                            <%= i < Math.round(avgRating) ? '‚≠ê' : '‚òÜ' %>
                                        <% } %>
                                    </span>
                                    <span class="rating-text"><%= avgRating %> (<%= reviewCount %> reviews)</span>
                                <% } else { %>
                                    <span class="rating-text">No reviews yet</span>
                                <% } %>
                            </div>
                            <p class="product-campus">üìç <%= product.campus %></p>
                        </div>

                        <div class="product-price-section">
                            <div class="price-main">$<%= product.price.toFixed(2) %></div>
                            <div class="condition-badge condition-badge-<%= product.condition %>">
                                Condition: <%= product.condition %>
                                <% if (product.condition === 'A') { %>(Excellent)
                                <% } else if (product.condition === 'B') { %>(Good)
                                <% } else if (product.condition === 'C') { %>(Fair)
                                <% } else { %>(Poor)<% } %>
                            </div>
                        </div>

                        <div class="seller-info">
                            <h3>Seller Information</h3>
                            <p>üë§ <%= product.seller_name %></p>
                        </div>

                        <div class="product-actions">
                            <% if (product.stock > 0) { %>
                                <button class="btn btn-primary btn-lg btn-block" onclick="addToCart(<%= product.id %>)">
                                    üõí Add to Cart
                                </button>
                                <a href="/checkout" class="btn btn-outline btn-lg btn-block">Buy Now</a>
                            <% } else { %>
                                <button class="btn btn-lg btn-block" disabled>Out of Stock</button>
                            <% } %>
                        </div>

                        <div class="product-description">
                            <h3>Description</h3>
                            <p><%= product.description %></p>
                        </div>

                        <div class="product-specs">
                            <h3>Product Details</h3>
                            <ul>
                                <li><strong>Category:</strong> <%= product.category %></li>
                                <li><strong>Condition:</strong> <%= product.condition %></li>
                                <li><strong>Stock:</strong> <%= product.stock %> available</li>
                                <li><strong>Campus:</strong> <%= product.campus %></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <% if (reviews.length > 0) { %>
                    <section class="reviews-section">
                        <h2>Customer Reviews</h2>
                        <div class="reviews-list">
                            <% reviews.forEach(review => { %>
                                <div class="review-card">
                                    <div class="review-header">
                                        <strong><%= review.user_name %></strong>
                                        <span class="review-rating">
                                            <% for (let i = 0; i < 5; i++) { %>
                                                <%= i < review.rating ? '‚≠ê' : '‚òÜ' %>
                                            <% } %>
                                        </span>
                                    </div>
                                    <p class="review-comment"><%= review.comment %></p>
                                    <p class="review-date"><%= new Date(review.created_at).toLocaleDateString() %></p>
                                </div>
                            <% }); %>
                        </div>
                    </section>
                <% } %>

                <% if (similarProducts.length > 0) { %>
                    <section class="similar-products">
                        <h2>Similar Products</h2>
                        <div class="product-grid">
                            <% similarProducts.forEach(product => { %>
                                <div class="product-card">
                                    <a href="/product/<%= product.id %>">
                                        <div class="product-image">
                                            <img src="<%= product.image_url %>" alt="<%= product.title %>" onerror="this.src='/images/placeholder.jpg'">
                                            <span class="product-condition condition-<%= product.condition %>"><%= product.condition %></span>
                                        </div>
                                        <div class="product-info">
                                            <h3 class="product-title"><%= product.title %></h3>
                                            <p class="product-campus">üìç <%= product.campus %></p>
                                            <div class="product-footer">
                                                <span class="product-price">$<%= product.price.toFixed(2) %></span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            <% }); %>
                        </div>
                    </section>
                <% } %>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>

    <script src="/js/main.js"></script>
</body>
</html>
