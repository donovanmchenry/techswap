<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle || 'TechSwap' %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>

    <main>
        <section class="account-section">
            <div class="container">
                <h1>My Account</h1>
                <p class="account-welcome">Welcome back, <%= user.name %>!</p>

                <div class="account-info-card">
                    <h2>Account Information</h2>
                    <div class="account-details">
                        <div class="detail-row">
                            <strong>Name:</strong>
                            <span><%= user.name %></span>
                        </div>
                        <div class="detail-row">
                            <strong>Email:</strong>
                            <span><%= user.email %></span>
                        </div>
                        <div class="detail-row">
                            <strong>Account Type:</strong>
                            <span><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></span>
                        </div>
                    </div>
                </div>

                <div class="account-orders">
                    <h2>My Orders</h2>
                    <% if (orders.length === 0) { %>
                        <div class="no-orders">
                            <p>You haven't placed any orders yet.</p>
                            <a href="/shop" class="btn btn-primary">Start Shopping</a>
                        </div>
                    <% } else { %>
                        <div class="orders-list">
                            <% orders.forEach(order => { %>
                                <div class="order-card">
                                    <div class="order-header">
                                        <div>
                                            <strong>Order #<%= order.id %></strong>
                                            <span class="order-date"><%= new Date(order.created_at).toLocaleDateString() %></span>
                                        </div>
                                        <span class="order-status status-<%= order.status %>"><%= order.status %></span>
                                    </div>
                                    <div class="order-body">
                                        <div class="order-info">
                                            <p><%= order.item_count %> item(s)</p>
                                            <p>Shipping: <%= order.shipping_method === 'pickup' ? 'Campus Pickup' : 'Standard Shipping' %></p>
                                        </div>
                                        <div class="order-total">
                                            <strong>$<%= order.total_amount.toFixed(2) %></strong>
                                        </div>
                                    </div>
                                    <div class="order-footer">
                                        <a href="/order-confirmation/<%= order.id %>" class="btn btn-sm btn-outline">View Details</a>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>

                <div class="account-actions">
                    <a href="/logout" class="btn btn-outline">Logout</a>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>

    <script src="/js/main.js"></script>
</body>
</html>
